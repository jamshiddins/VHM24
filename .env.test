# Тестовые переменные окружения для Jest

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test

# Redis
REDIS_URL=redis://localhost:6379

# API Configuration
PORT=3001
NODE_ENV=test

# Authentication & Security
JWT_SECRET=test_jwt_secret_for_testing_purposes_only
SESSION_SECRET=test_session_secret_for_testing_purposes_only
API_KEY=test_api_key_for_testing_purposes_only
ENCRYPTION_KEY=test_encryption_key_for_testing_purposes_only

# Telegram Bot
TELEGRAM_BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890
ADMIN_IDS=123456789
WEBHOOK_URL=https://example.com/api/telegram/webhook

# Railway
RAILWAY_PUBLIC_URL=https://example.com
RAILWAY_PUBLIC_DOMAIN=example.com
RAILWAY_PROJECT_ID=test-project-id
RAILWAY_ENVIRONMENT=test

# File Storage
S3_ACCESS_KEY=test_s3_access_key
S3_SECRET_KEY=test_s3_secret_key
S3_BUCKET=test-bucket
S3_BACKUP_BUCKET=test-backup-bucket
S3_ENDPOINT=https://test.example.com
S3_REGION=test-region
UPLOADS_ENDPOINT=https://test-uploads.example.com
BACKUPS_ENDPOINT=https://test-backups.example.com

# File Upload
UPLOAD_DIR=test-uploads
MAX_FILE_SIZE=10485760

# CORS
CORS_ORIGIN=https://example.com,http://localhost:3001

# Logging
LOG_LEVEL=error
LOG_FILE=logs/test.log

# Backup Settings
BACKUP_SCHEDULE=0 */6 * * *
BACKUP_RETENTION_DAYS=1
AUTO_BACKUP_ENABLED=false
ENABLE_AUTO_BACKUP=false

# Monitoring
HEALTH_CHECK_INTERVAL=1000
METRICS_ENABLED=false
ENABLE_MONITORING=false
