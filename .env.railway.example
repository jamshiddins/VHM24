# Пример файла .env для запуска VendHub на Railway
# Скопируйте этот файл в .env и заполните необходимые переменные

# Основные настройки
NODE_ENV=production
PORT=3000

# База данных
DATABASE_URL=postgresql://postgres:postgres@containers-us-west-1.railway.app:5432/railway

# Telegram Bot
TELEGRAM_BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ
ADMIN_IDS=123456789,987654321

# API и Webhook
RAILWAY_PUBLIC_URL=https://your-app.up.railway.app
API_BASE_URL=https://your-app.up.railway.app
WEBHOOK_URL=https://your-app.up.railway.app/api/telegram/webhook

# S3 хранилище (опционально)
S3_ENDPOINT=https://fra1.digitaloceanspaces.com
S3_REGION=fra1
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_BUCKET=vendhub

# Логирование
LOG_LEVEL=info

# Мониторинг
MONITORING_ENABLED=true

# Пропуск подключения к базе данных (только для разработки)
# SKIP_DATABASE=true
