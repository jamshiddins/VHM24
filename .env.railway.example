# VHM24 Railway Environment Variables Example
# Обновлено: 15 июля 2025

# Database (Railway PostgreSQL)
# Это значение будет автоматически установлено Railway
DATABASE_URL=${RAILWAY_DATABASE_URL}

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# API Configuration
API_URL=https://${RAILWAY_PUBLIC_DOMAIN}/api/v1
PORT=${PORT}
NODE_ENV=production
HOST=0.0.0.0

# Railway Integration
RAILWAY_PUBLIC_URL=https://${RAILWAY_PUBLIC_DOMAIN}
RAILWAY_PUBLIC_DOMAIN=${RAILWAY_PUBLIC_DOMAIN}
RAILWAY_STATIC_URL=https://${RAILWAY_PUBLIC_DOMAIN}

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
ADMIN_IDS=your_admin_ids
WEBHOOK_URL=https://${RAILWAY_PUBLIC_DOMAIN}/api/telegram/webhook
API_BASE_URL=https://${RAILWAY_PUBLIC_DOMAIN}/api

# Redis (Railway)
# Это значение будет автоматически установлено Railway
REDIS_URL=${RAILWAY_REDIS_URL}
REDIS_HOST=${RAILWAY_REDIS_HOST}
REDIS_PORT=${RAILWAY_REDIS_PORT}
REDIS_PASSWORD=${RAILWAY_REDIS_PASSWORD}

# File Storage (DigitalOcean Spaces)
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=your-bucket-name
S3_BACKUP_BUCKET=your-backup-bucket-name
S3_ENDPOINT=https://region.digitaloceanspaces.com
S3_REGION=region
UPLOADS_ENDPOINT=https://your-bucket-name.region.digitaloceanspaces.com
BACKUPS_ENDPOINT=https://your-backup-bucket-name.region.digitaloceanspaces.com

# CORS
CORS_ORIGIN=https://${RAILWAY_PUBLIC_DOMAIN},http://localhost:3001
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/production.log

# Payment Systems
MULTIKASSA_API_URL=https://api.multikassa.uz
MULTIKASSA_API_KEY=your_multikassa_api_key
PAYME_API_URL=https://checkout.paycom.uz
PAYME_API_KEY=your_payme_api_key

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_for_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000
