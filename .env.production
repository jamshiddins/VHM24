# Production Environment Variables for VHM24

# Database Configuration
# Option 1: Use single database with schemas (recommended for Railway)
DATABASE_URL=postgresql://user:password@host:5432/vhm24_production
USE_MULTIPLE_DATABASES=false

# Option 2: Use multiple databases (uncomment if using separate databases)
# USE_MULTIPLE_DATABASES=true
# AUTH_DATABASE_URL=postgresql://user:password@host:5432/vhm24_auth
# MACHINES_DATABASE_URL=postgresql://user:password@host:5432/vhm24_machines
# INVENTORY_DATABASE_URL=postgresql://user:password@host:5432/vhm24_inventory
# TASKS_DATABASE_URL=postgresql://user:password@host:5432/vhm24_tasks
# SHARED_DATABASE_URL=postgresql://user:password@host:5432/vhm24_shared

# Redis Configuration (Railway provides this)
REDIS_URL=redis://default:password@redis.railway.internal:6379

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-here
JWT_EXPIRES_IN=7d

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-app.railway.app/webhook
ADMIN_IDS=42283329

# API Configuration
API_URL=https://your-app.railway.app/api/v1
WEB_URL=https://your-app.railway.app

# Service Ports (for local communication in Railway)
GATEWAY_PORT=8000
AUTH_PORT=3001
MACHINES_PORT=3002
INVENTORY_PORT=3003
TASKS_PORT=3004
BUNKERS_PORT=3005

# Service URLs (for internal communication)
AUTH_SERVICE_URL=http://127.0.0.1:3001
MACHINES_SERVICE_URL=http://127.0.0.1:3002
INVENTORY_SERVICE_URL=http://127.0.0.1:3003
TASKS_SERVICE_URL=http://127.0.0.1:3004
BUNKERS_SERVICE_URL=http://127.0.0.1:3005

# Environment
NODE_ENV=production
RAILWAY_ENVIRONMENT=production

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Session
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000

# CORS
CORS_ORIGIN=https://your-app.railway.app

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
