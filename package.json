    "build": "echo 'No build required'",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "latest",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@fastify/websocket": "^11.1.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.0.1",
    "jsonwebtoken": "^9.0.2"
  }
}
