{
  "name": "vhm24-platform",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@9.0.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "cd packages/database && npx prisma generate",
    "dev": "node services/gateway/src/index.js",
