# VHM24 Environment Variables Example
# Copy this file to .env and fill in your values

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/vhm24
AUTH_DATABASE_URL=postgresql://user:password@localhost:5432/vhm24_auth

# Services Ports
PORT=8000
GATEWAY_PORT=8000
AUTH_PORT=3001
MACHINES_PORT=3002
INVENTORY_PORT=3003
TASKS_PORT=3004
BUNKERS_PORT=3005

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
ADMIN_IDS=42283329

# API Configuration
API_URL=http://localhost:8000/api/v1

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Session
SESSION_EXPIRY=86400000

# Environment
NODE_ENV=development

# Railway specific (for production)
RAILWAY_ENVIRONMENT=
RAILWAY_STATIC_URL=

# MinIO (for file storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=vhm24-uploads

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@vhm24.ru

# Push Notifications
FCM_SERVER_KEY=
APNS_KEY_ID=
APNS_TEAM_ID=

# Payment Systems
PAYME_MERCHANT_ID=
PAYME_SECRET_KEY=
CLICK_MERCHANT_ID=
CLICK_SERVICE_ID=
CLICK_SECRET_KEY=

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=vhm24-backups

# Audit System
AUDIT_SERVICE_PORT=3009
AUDIT_SERVICE_URL=http://localhost:3009
AUDIT_RETENTION_DAYS=90
AUDIT_SERVICE_TOKEN=your-audit-service-token
AUDIT_LOG_LEVEL=info
AUDIT_ENABLE_REQUEST_LOGGING=true
AUDIT_ENABLE_RESPONSE_LOGGING=true
