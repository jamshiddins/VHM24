# VHM24 Environment Configuration - Production Ready
NODE_ENV=production
PORT=8000

# Gateway Configuration
GATEWAY_PORT=8000

# Service Ports
AUTH_PORT=3001
MACHINES_PORT=3002
INVENTORY_PORT=3003
TASKS_PORT=3004
BUNKERS_PORT=3005

# Database (Railway PostgreSQL)
DATABASE_URL="postgresql://postgres:password@postgres.railway.internal:5432/railway"
DATABASE_PUBLIC_URL="postgresql://postgres:password@metro.proxy.rlwy.net:port/railway"

# Redis (Railway Redis)
REDIS_URL="redis://default:password@redis.railway.internal:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# DigitalOcean Spaces S3 Compatible
S3_ENDPOINT="https://nyc3.digitaloceanspaces.com"
S3_REGION="nyc3"
S3_BUCKET="vhm24-uploads-2025"
S3_ACCESS_KEY="your-digitalocean-access-key"
S3_SECRET_KEY="your-digitalocean-secret-key"

# Legacy AWS Variables (for compatibility)
AWS_ACCESS_KEY_ID="your-digitalocean-access-key"
AWS_SECRET_ACCESS_KEY="your-digitalocean-secret-key"
AWS_REGION="nyc3"
AWS_S3_BUCKET="vhm24-uploads-2025"

# Telegram Bot
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_WEBHOOK_URL="https://your-app.up.railway.app/webhook"

# Railway Environment Variables (Auto-set by Railway)
RAILWAY_ENVIRONMENT="production"
RAILWAY_PROJECT_NAME="VHM24"
RAILWAY_PUBLIC_DOMAIN="your-app.up.railway.app"
RAILWAY_PRIVATE_DOMAIN="your-app.railway.internal"

# Service URLs (Auto-generated from Railway domain)
API_URL="https://your-app.up.railway.app/api/v1"
WEB_URL="https://your-app.up.railway.app"

# Microservice URLs
AUTH_SERVICE_URL="https://your-app.up.railway.app/api/v1/auth"
MACHINES_SERVICE_URL="https://your-app.up.railway.app/api/v1/machines"
INVENTORY_SERVICE_URL="https://your-app.up.railway.app/api/v1/inventory"
TASKS_SERVICE_URL="https://your-app.up.railway.app/api/v1/tasks"
BUNKERS_SERVICE_URL="https://your-app.up.railway.app/api/v1/warehouse"

# Database Configuration
USE_MULTIPLE_DATABASES=false

# Admin Configuration
ADMIN_IDS="your-admin-telegram-id"

# Email Configuration
EMAIL_FROM="noreply@vhm24.com"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""

# Monitoring
SENTRY_DSN=""
LOG_LEVEL="info"

# Start Command (for Railway)
START_COMMAND="npm start"
