# VHM24 Environment Variables Example
# Обновлено: 15 июля 2025

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# API Configuration
API_URL=https://your-app-url.up.railway.app/api/v1
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Railway Integration
RAILWAY_PUBLIC_URL=https://your-app-url.up.railway.app
RAILWAY_PUBLIC_DOMAIN=your-app-url.up.railway.app
RAILWAY_STATIC_URL=https://your-app-url.up.railway.app

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
ADMIN_IDS=your_admin_ids
WEBHOOK_URL=https://your-app-url.up.railway.app/api/telegram/webhook
API_BASE_URL=https://your-app-url.up.railway.app/api

# Redis (Railway)
REDIS_URL=redis://default:password@redis.railway.internal:6379
REDIS_HOST=redis.railway.internal
REDIS_PORT=6379
REDIS_PASSWORD=password

# File Storage (DigitalOcean Spaces)
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=your-bucket-name
S3_BACKUP_BUCKET=your-backup-bucket-name
S3_ENDPOINT=https://region.digitaloceanspaces.com
S3_REGION=region
UPLOADS_ENDPOINT=https://your-bucket-name.region.digitaloceanspaces.com
BACKUPS_ENDPOINT=https://your-backup-bucket-name.region.digitaloceanspaces.com

# CORS
CORS_ORIGIN=https://your-app-url.up.railway.app,http://localhost:3001
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/production.log

# Payment Systems
MULTIKASSA_API_URL=https://api.multikassa.uz
MULTIKASSA_API_KEY=your_multikassa_api_key
PAYME_API_URL=https://checkout.paycom.uz
PAYME_API_KEY=your_payme_api_key

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_for_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000
